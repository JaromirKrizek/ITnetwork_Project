<!------------------------------------------------------------------------------------------------- 
- Toto view obsluhuje metodu AccountController.Register  
- Zobrazuje formulář pro registraci nového uživatele
- Nejedná se o kompletní stránku, ale pouze o její část, která se vloží do layoutu.
- Znak zavináč uvádí C# kód v HTML souboru, takzvaý Razor.
-------------------------------------------------------------------------------------------------->

<!-- Definuje, že modelem tohoto view je objekt třídy RegisterViewModel -->
@model Insurance_ASP.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registrace";  // Upraveno - Nastavení titulku
}

<!-------------------------------------------------------------------------------------------------
Obsah vkládané stránky 
-------------------------------------------------------------------------------------------------->

<div class="center-500">

    <!-- Hlavní nadpis stránky -->
    <h1>@ViewData["Title"]</h1>
    
    <form class="d-flex flex-column gap-4 mb-4" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!--<div asp-validation-summary="All" class="text-danger"></div>-->
    
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    
        <button type="submit" class="btn btn-primary align-self-start">Registrace</button>
    </form>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}