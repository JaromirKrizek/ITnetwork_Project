<!------------------------------------------------------------------------------------------------- 
- Toto view obsluhuje metodu AccountController.ChangePassword 
- Zobrazuje formulář pro změnu hesla uživatele
- Nejedná se o kompletní stránku, ale pouze o její část, která se vloží do layoutu.
- Znak zavináč uvádí C# kód v HTML souboru, takzvaý Razor.
-------------------------------------------------------------------------------------------------->

<!-- Definuje, že modelem tohoto view je objekt třídy ChangePasswordViewModel -->
@model Insurance_ASP.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Změna hesla";
    ViewData["ActivePage"] = "ChangePassword";
}

<!-------------------------------------------------------------------------------------------------
Obsah vkládané stránky 
-------------------------------------------------------------------------------------------------->

<div class="center-500">

    <!-- Hlavní nadpis stránky -->
    <h1>@ViewData["Title"]</h1>
    
    <form class="d-flex flex-column gap-4 mb-4" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!--<div asp-validation-summary="All" class="text-danger"></div>-->
    
        <div class="form-group">
            <label asp-for="OldPassword"></label>
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    
        <button type="submit" class="btn btn-primary align-self-start">Změnit heslo</button>
    </form>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}